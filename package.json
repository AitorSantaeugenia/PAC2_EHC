{
  "name": "pac2",
  "version": "1.0.0",
  "description": "PEC1 Eines HTML i CSS I - Màster Desenvolupament d'aplicacions i llocs web.",
  "autor": {
    "name": "Aitor J. Santaeugenia Marí",
    "email": "aitorsantaeugenia@gmail.com",
    "url": "https://github.com/AitorSantaeugenia"
  },
  "source": "src/index.html",
  "browserslist": "> 0.5%, last 2 versions, not dead",
  "web": "dist/index.html",
  "targets": {
    "web": {
      "context": "browser",
      "publicUrl": "/"
    }
  },
  "scripts": {
    "start": "parcel src/index.html",
    "build": "npm-run-all clean parcel:build --ignore-scripts",
    "parcel:build": "parcel build src/index.html --target web",
    "clean": "rimraf dist .cache .cache-loader .parcel-cache"
  },
