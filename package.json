    "lodash": "^4.17.21",
    "parcel": "^2.10.0",
    "parcel-resolver-ignore": "^2.1.5",
    "posthtml-include": "^1.7.4"
  },
  "dependencies": {
    "npm-run-all": "^4.1.5",
    "rimraf": "^5.0.5",
    "sharp": "0.33.1",
    "swiffy-slider": "^1.6.0"
  }
}
